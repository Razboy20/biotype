generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // relationMode = "prisma"
}

model User {
  name     String   @id @map("_id")
  variance Float
  samples  Sample[]
}

model Sample {
  User     User    @relation(fields: [userName], references: [name])
  userName String
  id       String  @id @unique @default(uuid()) @map("_id")
  graphs   Graph[]

  // @@index([userName])
}

model Graph {
  sample   Sample @relation(fields: [sampleId], references: [id])
  sampleId String
  value    String

  @@id([sampleId, value])
}
